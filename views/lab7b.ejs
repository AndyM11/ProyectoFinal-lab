<body>
    <div class="contenedor">
        <h1 class="titulo">Condiciones medicas</h1>
        <div class="contenedor-formulario">
            <form action="" method="get" id="formulario3">
            
                <select name="enfermedad" id="enfermedad">
                    <option value="">Enfermedad</option>
                    <option value="diabetes">Diabetes</option>
                    <option value="hipertension">Hipertensión</option>
                    <option value="cancer">Cáncer</option>
                    <option value="cardiopatia">Cardiopatía</option>
                    <option value="obesidad">Obesidad</option>
                    <option value="otra">Otra</option>
                </select>

                <input type="text" name="tiempo" id="tiempo" placeholder="Tiempo con la enfermedad">

                <textarea name="detalles" id="detalles" cols="30" rows="10" placeholder="Detalles de la enfermedad"></textarea>


                <input name="enviar" class="enviar" type="submit" value="Enviar">
            </form>
        </div>
    </div>
    
